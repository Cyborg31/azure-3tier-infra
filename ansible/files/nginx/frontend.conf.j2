# ansible/files/nginx/frontend.conf.j2
server {
    listen 80;
    listen [::]:80;

    root /var/www/html;
    index index.html index.htm;

    server_name _; # Listen on all hostnames

    # Serve static frontend files, falling back to index.html for SPAs
    location / {
        try_files $uri $uri/ /index.html;
    }

    # PROXY API requests to the backend tier
    location /api/ {
        # Dynamically inject the App Load Balancer's private IP and backend port (3000)
        proxy_pass http://{{ app_lb_private_ip }}:3000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Optional: Cache control for static assets (adjust as needed)
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|eot|ttf|woff|woff2)$ {
        expires 30d;
        add_header Cache-Control "public, no-transform";
    }

    # Optional: Log settings
    access_log /var/log/nginx/frontend_access.log;
    error_log /var/log/nginx/frontend_error.log;
}