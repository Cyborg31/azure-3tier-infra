# terraform.tfvars.example
# Rename this to terraform.tfvars and fill in your actual values.
# Do NOT commit terraform.tfvars with secrets to public repos!

# Azure region
location            = "eastus"

# Resource group and network
resource_group_name = "my3tier-rg"
vnet_name           = "my3tier-vnet"
address_space       = ["10.0.0.0/16"]

# Subnets
web_subnet_name     = "web-subnet"
web_subnet_prefix   = "10.0.1.0/24"

app_subnet_name     = "app-subnet"
app_subnet_prefix   = "10.0.2.0/24"

db_subnet_name      = "db-subnet"
db_subnet_prefix    = "10.0.3.0/24"

# VM sizes and counts
vm_size             = "Standard_B2ms"
web_instance_count  = 2
app_instance_count  = 2

# SSH public key (paste content of your ~/.ssh/id_rsa.pub here)
ssh_public_key      = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQ... your-key ... user@domain"

# Azure Service Principal credentials (fill securely)
subscription_id     = "your-subscription-id"
tenant_id           = "your-tenant-id"
client_id           = "your-client-id"
client_secret       = "your-client-secret"
